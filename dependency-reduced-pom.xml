<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <parent>
    <artifactId>pom-scijava</artifactId>
    <groupId>org.scijava</groupId>
    <version>31.1.0</version>
    <relativePath>pom.xml</relativePath>
  </parent>
  <modelVersion>4.0.0</modelVersion>
  <groupId>life.qbic</groupId>
  <artifactId>XMLEditor</artifactId>
  <name>XML Editor</name>
  <version>20_04_23</version>
  <description>A Maven project implementing an ImageJ command.</description>
  <url>https://mycompany.com/imagej/gauss-filtering/</url>
  <issueManagement>
    <system>GitHub Issues</system>
    <url>https://github.com/imagej/example-imagej2-command/issues</url>
  </issueManagement>
  <ciManagement>
    <system>None</system>
  </ciManagement>
  <inceptionYear>2017</inceptionYear>
  <mailingLists>
    <mailingList>
      <name>Image.sc Forum</name>
      <archive>https://forum.image.sc/tag/imagej</archive>
    </mailingList>
  </mailingLists>
  <developers>
    <developer>
      <id>octocat</id>
      <name>Noma Onomatopoeia</name>
      <url>https://mycompany.com/people/noma-onomatopoeia</url>
      <roles>
        <role>founder</role>
        <role>lead</role>
        <role>developer</role>
        <role>debugger</role>
        <role>reviewer</role>
        <role>support</role>
        <role>maintainer</role>
      </roles>
    </developer>
  </developers>
  <contributors>
    <contributor>
      <name>None</name>
    </contributor>
  </contributors>
  <licenses>
    <license>
      <name>CC0</name>
      <url>https://creativecommons.org/publicdomain/zero/1.0/</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  <scm>
    <connection>scm:git:https://github.com/imagej/example-imagej2-command</connection>
    <developerConnection>scm:git:git@github.com:imagej/example-imagej2-command</developerConnection>
    <url>https://github.com/imagej/example-imagej2-command</url>
  </scm>
  <organization>
    <name>My Company</name>
    <url>https://mycompany.com/</url>
  </organization>
  <build>
    <plugins>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.4.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <artifactSet>
            <includes>
              <include>org.apache.xmlgraphics:batik-transcoder</include>
              <include>org.jetbrains:markdown</include>
            </includes>
          </artifactSet>
        </configuration>
      </plugin>
    </plugins>
  </build>
  <repositories>
    <repository>
      <id>scijava.public</id>
      <url>https://maven.scijava.org/content/groups/public</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>net.imagej</groupId>
      <artifactId>imagej</artifactId>
      <version>2.3.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>ome</groupId>
      <artifactId>bio-formats_plugins</artifactId>
      <version>6.1.1</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>com.formdev</groupId>
      <artifactId>flatlaf</artifactId>
      <version>3.0</version>
      <scope>compile</scope>
    </dependency>
    <dependency>
      <groupId>org.apache.xmlbeans</groupId>
      <artifactId>xmlbeans</artifactId>
      <version>5.1.1</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>
  <properties>
    <license.copyrightOwners>University of Tuebingen</license.copyrightOwners>
    <license.licenseName>MIT</license.licenseName>
    <package-name>life.qbic.xmledit</package-name>
    <main-class>life.qbic.xmledit.XMLEditor</main-class>
  </properties>
</project>
